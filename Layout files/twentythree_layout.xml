<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp"
    android:layout_marginStart="10dp">

    <!-- CircleImageView for mentor picture -->
    <ImageView
        android:id="@+id/box1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:src="@drawable/orderimage" />


    <!-- White rectangle box to wrap the TextViews -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rounded_box"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_marginStart="-20dp"
        android:padding="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginStart="0dp">
        <!-- TextViews for date, name, job, and availability -->

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order #345"
                android:textColor="#37474F"
                android:textStyle="bold"
                android:textSize="22sp"/>


            <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:textColor="#ECB800"
            android:textSize="14sp"
            android:textStyle="bold"
                android:layout_marginStart="90dp" />


    </LinearLayout>

        <!-- Include time ahead of job title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginStart="0dp">


            <TextView
                android:id="@+id/amountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered"
                android:textColor="#2EF407"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/price1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$400"
                android:layout_marginTop="0dp"
                android:layout_marginStart="100dp"
                android:textColor="#FF5722"
                android:textSize="24sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/date1TextVieew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="October 26, 2014"
            android:layout_marginTop="5dp"
            android:textColor="#37474F"
            android:textSize="16sp"/>

    </LinearLayout>
</LinearLayout>